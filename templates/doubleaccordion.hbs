<div class="doubleaccordion-inner component-inner" role="region" aria-label="{{_globals._components._accordion.ariaRegion}}">
    {{> component this}}
    <div class="doubleaccordion-widget component-widget">
        {{#each _items}}
            <div class="item">
                <button role="button" class="base item-title {{#if _isVisited}}visited{{/if}}" aria-expanded="false" aria-label="{{{title}}}">
                    <div class="item-title-inner">
                        <div class="item-title-icon icon icon-plus h5"></div>
                        {{{title}}}
                    </div>
                </button>
                <div class="item-body">
                    <div class="item-body-inner">
                        <div class="item-text">
                        {{{a11y_text body}}}
                        </div>
                        {{#if _graphic}}
                            {{#if _graphic.src}}
                                <div class="item-graphic">
                                    <img src="{{_graphic.src}}" aria-label="{{_graphic.alt}}" tabindex="0">
                                </div>
                            {{/if}}
                        {{/if}}

                        <div class="children">
                        {{#each _child}}
                            <div class="child-item">
                                <button class="child-item-title">
                                    <div class="child-item-title-inner">
                                        <div class="child-item-title-icon icon icon-plus h5"></div>
                                        {{{childTitle}}}
                                    </div>
                                </button>
                                <div class="child-item-body">
                                    {{{a11y_text childBody}}}
                                    {{#if _childGraphic}}
                                        <div class="child-item-graphic">
                                            <img src="{{_childGraphic}}" aria-label="{{_graphic.alt}}" tabindex="0">
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
            </div>    
        {{/each}}
    </div>
</div>
